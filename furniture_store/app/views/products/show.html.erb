  <span style="float:right">
    <a href="/"><img src="http://i.imgur.com/aztiI42.jpg" width="50" height="50" alt="Home"></a>
    </br>
    <a href="/products"><img src="http://i.imgur.com/9hp55zN.jpg" width="50" height="50" alt="Back"></a>
  </span>

  <article class='img_box'>
    <img src="http://www.revelryeventdesigners.com/wp-content/uploads/2011/05/Gold-chair.jpg" width="400" height="400" alt="image of <% product.name %>">
  </article>

  <article class='show_box'>
    <h3><%= product.name %></h3>

    <p>List Price: $<%= product.price %></p>
    <p>Current Price: $<%= product.display_price %>
    <% if product.on_clearance %>
      <%= "- 10% off!!!" if product.condition == 'good' %>
      <%= "- 20% off!!!" if product.condition == 'average' %>
    <% end %></p>
    <p>Condition: <%= product.condition %></p>
    <p>In Stock: <%= product.quantity %></p>

  </article>
